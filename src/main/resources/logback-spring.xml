<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- Log message format -->
        <encoder>
            <Pattern>
                %d{yyyy-MMM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{0}.%M [%X{GameID}] [%X{RequestId}] - %msg%n
            </Pattern>
        </encoder>
    </appender>


    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE}</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{yyyy-MMM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{0}.%M [%X{GameID}] [%X{RequestId}] - %msg%n
            </Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/log_%d{dd-MM-yyyy}_${LOG_FILE}.log.gz</fileNamePattern>
            <maxHistory>10</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <springProfile name="!prod">
        <logger name="org.springframework" level="info">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <logger name="nl.backbase.game" level="debug"
                additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
    </springProfile>

</configuration>
